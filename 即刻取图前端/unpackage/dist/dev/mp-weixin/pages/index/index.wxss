page {
  text-align: center;
}
.top-image {
  border-radius: 0rpx 0rpx 25rpx 25rpx;
  overflow: hidden;
}
.top-image image {
  width: 100%;
  max-height: 550rpx;
  min-height: 450rpx;
}
.body-image {
  width: 100%;
  margin-top: -130rpx;
  position: relative;
  z-index: 1;
  border-radius: 50rpx 50rpx 0rpx 0rpx;
  overflow: hidden;
}
.body-image .img-search {
  padding-top: 20rpx;
  background-color: #ffffffdd;
  height: 130rpx;
  text-align: center;
}
.body-image .img-search .searchs {
  width: 90%;
  height: 100rpx;
  margin: auto;
  position: relative;
  border: 6rpx solid #000000;
  border-radius: 50rpx;
}
.body-image .img-search .searchs .inputSearch {
  text-align: left;
  padding-left: 25rpx;
  height: 100%;
  width: 75%;
}
.body-image .img-search .searchs .btnSearch {
  padding: 0rpx;
  color: #ffffff;
  width: 150rpx;
  height: 75rpx;
  font-size: 35rpx;
  line-height: 75rpx;
  position: absolute;
  top: 8rpx;
  right: 15rpx;
  border-radius: 50rpx;
  z-index: 99;
}
.body-image .tag-array {
  width: 100%;
  margin: auto;
  background-color: #ffffff;
}
.body-image .tag-array .tag-title {
  width: 92%;
  height: 70rpx;
  text-align: center;
  margin: auto;
  border-bottom: 1rpx solid #cccccc;
  padding-top: 10rpx;
}
.body-image .tag-array .recommend-tags {
  width: 92%;
  margin: auto;
  padding: 20rpx 20rpx 0rpx;
}
.body-image .tag-array .recommend-tags .scroll-list-tags {
  width: 110rpx;
  height: 110rpx;
  position: relative;
  margin-right: 20rpx;
  border-radius: 100%;
  overflow: hidden;
  border: 5rpx solid #ffffff;
}
.body-image .tag-array .recommend-tags .scroll-list-tags image {
  width: 100%;
}
.body-image .tag-array .recommend-tags .scroll-list-tags .tag-name {
  position: absolute;
  bottom: 0rpx;
  height: 40rpx;
  width: 100%;
  background-color: #00000099;
  text-align: center;
}
.body-image .index-class {
  width: 100%;
  background-color: #ffffff;
  text-align: center;
}
.body-image .index-class .class-list {
  width: 92%;
  margin: auto;
  padding-bottom: 15rpx;
}
.body-image .index-class .class-list .cla-title {
  text-align: left;
  width: 100%;
  height: 60rpx;
}
.body-image .index-class .class-list .cla-title image {
  display: inline-block;
  width: 50rpx;
  vertical-align: middle;
}
.body-image .index-class .class-list .cla-title text {
  font-size: 35rpx;
  font-weight: 710;
  vertical-align: middle;
  margin-left: 10rpx;
}
.body-image .index-class .class-list .cla-title .go-class {
  color: #333333;
  float: right;
  display: inline-block;
  height: 100%;
  line-height: 60rpx;
  vertical-align: middle;
}
.body-image .index-class .class-list .cla-title .go-class .cuIcon-right {
  font-size: 30rpx;
  vertical-align: middle;
  margin-left: 0rpx;
  display: inline-block;
  margin-top: -6rpx;
}
.body-image .index-class .class-list .cal-posts {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.body-image .index-class .class-list .cal-posts .img-post {
  width: 32%;
  display: inline-block;
  max-height: 380rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  border-radius: 15rpx;
}
.scroll-list {
  display: flex;
  flex-direction: column;
}
.scroll-list__goods-item {
  margin-right: 20px;
}
.scroll-list__goods-item__image {
  width: 60px;
  height: 60px;
  border-radius: 4px;
}
.scroll-list__goods-item__text {
  color: #f56c6c;
  text-align: center;
  font-size: 12px;
  margin-top: 5px;
}
.scroll-list__show-more {
  background-color: #fff0f0;
  border-radius: 3px;
  padding: 3px 6px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.scroll-list__show-more__text {
  font-size: 12px;
  width: 12px;
  color: #f56c6c;
  line-height: 16px;
}
.scroll-list__line {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}
.scroll-list__line__item {
  margin-right: 15px;
}
.scroll-list__line__item__image {
  width: 61px;
  height: 48px;
}
.scroll-list__line__item__text {
  margin-top: 5px;
  color: #606266;
  font-size: 12px;
  text-align: center;
}
.scroll-list__line__item--no-margin-right {
  margin-right: 0;
}

